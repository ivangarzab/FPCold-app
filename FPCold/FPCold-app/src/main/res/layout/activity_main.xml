<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/loginRelativeLayout"
                android:background="#333333">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/logoLinearLayout"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/fpLinearLayout"
            android:layout_weight="1"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firstTextView"
                android:text="First"
                android:textColor="#3399FF"
                android:textSize="46dp"
                android:typeface="serif"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logoImageView"
                android:src="@drawable/icon"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/produceTextView"
                android:text="Produce"
                android:textColor="#3399FF"
                android:textSize="46dp"
                android:typeface="serif"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/csLinearLayout"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:paddingRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coldTextView"
                android:text="Cold"
                android:typeface="serif"
                android:layout_weight="1"
                android:textColor="#7FFF00"
                android:textSize="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storageTextView"
                android:text="Storage"
                android:typeface="serif"
                android:layout_weight="1"
                android:textColor="#7FFF00"
                android:textSize="35dp"
                android:paddingLeft="6dp"/>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginEditText"
        android:inputType="number"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="4-digit PIN"
        android:maxLength="4"
        android:singleLine="true"
        android:textColorHint="#2880d8"
        android:textColor="#3399FF"
        android:textColorHighlight="#3399FF"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:text="LOGIN"
        android:layout_below="@+id/loginEditText"
        android:onClick="loginAction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="#009900"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
