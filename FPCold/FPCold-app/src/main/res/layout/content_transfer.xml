<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/transferRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parse.starter.TransferActivity"
    android:background="@color/colorBackground"
    tools:showIn="@layout/activity_transfer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transferInstructionsTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First scan the pallet tag to be moved, followed by the location where the pallet is to be moved."
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorMainText"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transferScannersLinearLayout"
        android:layout_below="@+id/transferInstructionsTextView"
        android:layout_marginTop="35sp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transferPalletRelativeLayout"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transferFirstImageButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/camera"
                android:background="@color/colorBackground"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferFirstEditText"
                android:layout_toRightOf="@+id/transferFirstImageButton"
                android:layout_toEndOf="@+id/transferFirstImageButton"
                android:layout_marginLeft="10dp"
                android:hint="Pallet Tag"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/colorSecondaryDark"
                android:textColor="@color/colorSecondary"
                android:textColorHighlight="@color/colorSecondaryLight"/>
        </RelativeLayout>

        <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/transferLocationRelativeLayout"
             android:layout_marginTop="25dp"
             android:layout_weight="1">
             <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transferSecondImageButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/camera"
                android:background="@color/colorBackground"/>
             <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferSecondEditText"
                android:layout_toRightOf="@+id/transferSecondImageButton"
                android:layout_toEndOf="@+id/transferSecondImageButton"
                android:layout_marginLeft="10dp"
                android:hint="New Location Number"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/colorSecondaryDark"
                android:textColor="@color/colorSecondary"
                android:textColorHighlight="@color/colorSecondaryLight"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transferMsgLinearLayout"
        android:layout_below="@+id/transferScannersLinearLayout"
        android:layout_above="@+id/transferButtonsLinearLayout"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:background="@color/colorBackgroundLight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:id="@+id/transferInfoTextView"
            android:layout_weight="1"
            android:text="Transaction Information:"
            android:textColor="@color/colorMainText"
            android:textSize="23sp"
            android:layout_marginTop="3dp"
            android:paddingLeft="6dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transferOldLinearLayout"
            android:layout_weight="1"
            android:layout_below="@+id/transferInfoTextView">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferOldTitleTextView"
                android:layout_weight="1"
                android:text="Old Location"
                android:textColor="@color/colorButton"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferOldInfoLinearLayout"
                android:layout_weight="1"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transferOldPalletTextView"
                    android:layout_weight="1"
                    android:text="Pallet Tag"
                    android:textColor="@color/colorMainText"
                    android:textSize="20sp"
                    android:paddingLeft="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transferOldInfoTextView"
                    android:layout_weight="1"
                    android:text="from"
                    android:textColor="@color/colorMainText"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transferOldLocationTextView"
                    android:layout_weight="1"
                    android:text="Location Number"
                    android:textColor="@color/colorMainText"
                    android:textSize="20sp"
                    android:paddingRight="6dp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transferNewLinearLayout"
            android:layout_weight="1"
            android:layout_below="@+id/transferOldLinearLayout"
            android:layout_marginBottom="6sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferNewTitleTextView"
                android:layout_weight="1"
                android:text="New Location"
                android:textColor="@color/colorButton"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferNewInfoLinearLayout"
                android:layout_weight="1"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transferNewInfoTextView"
                    android:layout_weight="1"
                    android:text="Moved to"
                    android:textColor="@color/colorMainText"
                    android:textSize="20sp"
                    android:paddingLeft="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transferNewLocationTextView"
                    android:layout_weight="1"
                    android:text="New Location"
                    android:textColor="@color/colorMainText"
                    android:textSize="20sp"
                    android:paddingRight="6dp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transferButtonsLinearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15sp"
        android:isScrollContainer="false">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/transferButton"
            android:layout_weight="1"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:text="TRANSFER"
            android:textColor="@color/colorMainText"
            android:background="@color/colorSecondary"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/transferFinishButton"
            android:layout_weight="1"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:text="FINISH"
            android:textColor="@color/colorMainText"
            android:background="@color/colorSecondary"
            />

    </LinearLayout>

</RelativeLayout>
