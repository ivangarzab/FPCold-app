<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/inventoryRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parse.starter.InventoryActivity"
    tools:showIn="@layout/activity_inventory"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryLinearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryInstructionsTextView"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            android:text="Please follow this instructions."
            android:textSize="15sp"
            android:textColor="@color/colorMainText"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryScannerRelativeLayout"
            android:layout_weight="1"
            android:layout_below="@id/inventoryInstructionsTextView"
            android:layout_marginTop="15sp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryImageButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/camera"
                android:background="@color/colorBackgroundLight"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryEditText"
                android:layout_toRightOf="@+id/inventoryImageButton"
                android:layout_toEndOf="@+id/inventoryImageButton"
                android:layout_toLeftOf="@+id/inventoryKeyboardImageButton"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:hint="Hint"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/colorSecondaryDark"
                android:textColor="@color/colorSecondary"
                android:textColorHighlight="@color/colorSecondaryLight"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryKeyboardImageButton"
                android:layout_toLeftOf="@+id/inventorySearchButton"
                android:src="@drawable/keyboard"
                android:background="@color/colorBackground"
                android:onClick="keyboardAction"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventorySearchButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="6sp"
                android:src="@drawable/search"
                android:background="@color/colorBackground"
                android:onClick="searchAction"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryResultsLinearLayout"
        android:layout_below="@+id/inventoryLinearLayout"
        android:layout_above="@+id/inventoryBotLinearLayout"
        android:layout_marginTop="15sp"
        android:background="@drawable/custom_list_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryResultsTextView"
            android:text="Individual Search Results:"
            android:textColor="@color/colorMainText"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:paddingLeft="6dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryListView"
            android:layout_below="@+id/inventoryResultsTextView"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@drawable/custom_storage_scrollbar"
            android:fadeScrollbars="false"
            tools:listitem="@layout/custom_storage_row"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryBotLinearLayout"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryOrTextView"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="OR"
            android:textSize="15sp"
            android:textColor="@color/colorMainText"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Button Text"
            android:textColor="@color/colorMainText"
            android:background="@color/colorSecondary"
            android:onClick="buttonsAction"/>

    </LinearLayout>

</RelativeLayout>
