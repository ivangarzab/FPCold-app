<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/inventoryRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parse.starter.InventoryActivity"
    tools:showIn="@layout/activity_inventory"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryTopLinearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBackgroundLight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryTopInstructionsTextView"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            android:text="Scan a Pallet Tag to find it on the virtual storage:"
            android:textSize="20sp"
            android:textColor="@color/colorMainText"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryTopScannerRelativeLayout"
            android:layout_weight="1"
            android:layout_marginTop="15sp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryTopImageButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="6sp"
                android:src="@drawable/camera"
                android:background="@color/colorBackgroundLight"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryTopEditText"
                android:layout_toRightOf="@+id/inventoryTopImageButton"
                android:layout_toEndOf="@+id/inventoryTopImageButton"
                android:layout_toLeftOf="@+id/inventoryTopKeyboardImageButton"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:hint="Pallet Tag"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/colorSecondaryDark"
                android:textColor="@color/colorSecondary"
                android:textColorHighlight="@color/colorSecondaryLight"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryTopKeyboardImageButton"
                android:layout_toLeftOf="@+id/inventoryTopSearchButton"
                android:src="@drawable/keyboard"
                android:background="@color/colorBackgroundLight"
                android:onClick="keyboardAction"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryTopSearchButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:src="@drawable/search"
                android:background="@color/colorBackgroundLight"
                android:onClick="searchPallet"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryTopOrTextView"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="OR"
            android:textSize="25sp"
            android:textColor="@color/colorMainText"/>

        <Button
            android:layout_width="260sp"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryTopAllButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="Search Pallet Tags by Batch"
            android:textColor="@color/colorMainText"
            android:background="@color/colorSecondary"
            android:onClick="buttonsAction"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:id="@+id/inventoryBufferRelativeLayout"
        android:layout_below="@+id/inventoryTopLinearLayout"
        android:layout_above="@+id/inventoryBotLinearLayout"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp">
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryBotLinearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorBackgroundLight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryBotInstructionsTextView"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            android:text="Scan a Location Number to retrieve it's contents:"
            android:textSize="20sp"
            android:textColor="@color/colorMainText"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryBotScannerRelativeLayout"
            android:layout_weight="1"
            android:layout_marginTop="15sp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryBotImageButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="6sp"
                android:src="@drawable/camera"
                android:background="@color/colorBackgroundLight"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryBotEditText"
                android:layout_toRightOf="@+id/inventoryBotImageButton"
                android:layout_toEndOf="@+id/inventoryBotImageButton"
                android:layout_toLeftOf="@+id/inventoryBotKeyboardImageButton"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:hint="Location Number"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/colorSecondaryDark"
                android:textColor="@color/colorSecondary"
                android:textColorHighlight="@color/colorSecondaryLight"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryBotKeyboardImageButton"
                android:layout_toLeftOf="@+id/inventoryBotSearchButton"
                android:src="@drawable/keyboard"
                android:background="@color/colorBackgroundLight"
                android:onClick="keyboardAction"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryBotSearchButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:src="@drawable/search"
                android:background="@color/colorBackgroundLight"
                android:onClick="searchLocation"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryBotOrTextView"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="OR"
            android:textSize="25sp"
            android:textColor="@color/colorMainText"/>

        <Button
            android:layout_width="260sp"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryBotAllButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:text="Display ALL Inventory"
            android:textColor="@color/colorMainText"
            android:background="@color/colorSecondary"
            android:onClick="buttonsAction"/>

    </LinearLayout>

</RelativeLayout>
