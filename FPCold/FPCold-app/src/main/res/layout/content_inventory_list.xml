<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/inventoryListRelativaLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parse.starter.InventoryList"
    tools:showIn="@layout/activity_inventory_list"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryListHeaderLayout">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryListButtonLayout"
            android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryListExcelImageButton"
            android:src="@drawable/excel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorBackground"
            android:onClick="shareExcel"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryListTitlesLayout"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryListTitle1TextView"
                android:layout_weight="1"
                android:text="FirstTitle"
                android:textSize="23sp"
                android:gravity="left"
                android:textColor="@color/colorMainText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventoryListTitle2TextView"
                android:layout_weight="1"
                android:text="SecondTitle"
                android:textSize="23sp"
                android:gravity="right"
                android:textColor="@color/colorMainText"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inventoryListView"
        android:layout_below="@+id/inventoryListHeaderLayout"
        android:scrollbarThumbVertical="@drawable/custom_storage_scrollbar"/>
</RelativeLayout>
